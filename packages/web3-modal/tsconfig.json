{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "composite": true,
        "declarationMap": true,
        "allowJs": true,
        "module": "ESNext",
        "declarationDir": "./dist/types"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/__mocks__",
        "./src/**/*.decorator.tsx?"
    ],
    "references": [
        {
            "path": "../components"
        },
        {
            "path": "../hooks"
        },
        {
            "path": "../theme"
        },
        {
            "path": "../utils"
        },
        {
            "path": "../wagmi-connectors"
        }
    ]
}