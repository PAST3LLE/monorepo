{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "baseUrl": "./",
        "module": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true,
        "declarationMap": true
    },
    "references": [
        {
            "path": "../assets"
        },
        {
            "path": "../constants"
        },
        {
            "path": "../hooks"
        },
        {
            "path": "../theme"
        },
        {
            "path": "../types"
        },
        {
            "path": "../utils"
        }
    ],
    "include": [
        "./src",
        "./src/utils"
    ],
    "exclude": [
        "./src/**/*.fixture.tsx?",
        "./src/**/*.decorator.tsx?",
        "./src/__mocks__",
        "./src/__tests__"
    ]
}