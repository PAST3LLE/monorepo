{
  "name": "@past3lle/theme",
  "sideEffects": false,
  "version": "0.0.6",
  "description": "common theme parts",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "directory": "packages/theme",
    "url": "https://github.com/PAST3LLE/schematics-monorepo.git"
  },
  "author": "pastelle",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf tsconfig.tsbuildinfo",
    "compile": "tsdx build && cp \"./package.json\" ./dist/",
    "build": "yarn clean && yarn compile",
    "prepack": "yarn build",
    "start": "tsdx watch",
    "test": "echo 'removed default test' ",
    "alt-test": "tsc test --env=jsdom",
    "test:watch": "tsc test --env=jsdom --watchAll",
    "test:ci": "yarn alt-test --coverage --no-watch --watch=false --watchAll=false --no-watchman --forceExit --detectOpenHandles",
    "pre-commit": "pretty-quick --staged && yarn test:ci && yarn build",
    "lint": "prettier --write ./src/** --ignore-path '../../.prettierignore'"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ],
    "moduleNameMapper": {
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/file-mock.js"
    },
    "testMatch": [
      "<rootDir>src/**/__tests__/*.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@rollup/plugin-image": "^3.0.1",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.10",
    "@types/rebass": "^4.0.10",
    "@types/styled-components": "^5.1.26",
    "@types/styled-theming": "^2.2.5",
    "@types/wcag-contrast": "^3.0.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-styled-components": "^1.10.6",
    "jest-styled-components": "^7.0.0-beta.1",
    "pretty-quick": "^2.0.1",
    "react": "^18.0.10",
    "react-dom": "^18.0.10",
    "source-map-explorer": "^2.0.1",
    "styled-components": "^5.3.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "styled-components": ">=5"
  },
  "dependencies": {
    "@past3lle/assets": "^0.0.5-alpha.3",
    "@past3lle/constants": "^0.0.4-alpha.3.1.1",
    "@past3lle/types": "^0.0.4-alpha.3.1",
    "polished": "^4.2.2",
    "rebass": "^4.0.7",
    "styled-theming": "^2.2.0",
    "wcag-contrast": "^3.0.0"
  },
  "gitHead": "266af67bdd096495a3f78b4f8c1992973ce9f662"
}
