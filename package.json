{
  "name": "past3lle-monorepo",
  "homepage": "https://github.com/past3lle/schematics-monorepo",
  "repository": "past3lle/schematics-monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test:generic": "cd examples/generic && rm -rf node_modules .parcel-cache && yarn && yarn start && cd ../..",
    "prepare": "node ./configure-references.js",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream --parallel",
    "lint:examples": "npx prettier --write examples --ignore-file './prettierignore'",
    "start:skilltree": "npx lerna run start --scope @past3lle/skilltree-ui",
    "test": "yarn jest --coverage",
    "install:examples": "cd examples/generic && yarn && cd ../../"
 },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "is-ci": "^3.0.1",
    "lerna": "^6.4.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
