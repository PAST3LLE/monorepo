{
  "name": "@past3lle/schematics",
  "version": "0.0.1",
  "homepage": "https://github.com/past3lle/schematics",
  "repository": "past3lle/schematics",
  "main": "dist/index.js",
  "module": "dist/schematics.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "yarn build && source-map-explorer ./dist/*.js",
    "release": "yarn build && npm publish",
    "start": "tsc watch",
    "build": "tsc",
    "test": "echo 'removed default test' ",
    "alt-test": "tsc test --env=jsdom",
    "test:ui": "cd ./example && rm -rf .parcel-cache dist && yarn start && cd ../",
    "test:watch": "tsc test --env=jsdom --watchAll",
    "test:ci": "yarn alt-test --coverage --no-watch --watch=false --watchAll=false --no-watchman --forceExit --detectOpenHandles",
    "pre-commit": "pretty-quick --staged && yarn test:ci && yarn build",
    "postinstall": "cd ./example && yarn && cd ../"
  },
  "husky": {
    "hooks": {}
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/file-mock.js"
    },
    "testMatch": [
      "<rootDir>src/**/__tests__/*.{ts,tsx}"
    ],
    "collectCoverageFrom": [
      "./src/App.tsx",
      "./src/components/**/*.{ts,tsx}",
      "./src/context/**/*.${ts,tsx}",
      "./src/helpers/**/*.${ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@rollup/plugin-image": "^3.0.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.149",
    "@types/lodash.throttle": "^4.1.7",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.10",
    "@types/rebass": "^4.0.10",
    "@types/styled-components": "^5.1.26",
    "@types/styled-theming": "^2.2.5",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^7.0.0",
    "@types/wcag-contrast": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-styled-components": "^1.10.6",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "imagekitio-react": "^2.0.0",
    "jest-styled-components": "^7.0.0-beta.1",
    "lodash.throttle": "^4.1.1",
    "polished": "^4.2.2",
    "prettier": "^2.8.2",
    "pretty-quick": "^2.0.1",
    "react": "^18.0.10",
    "react-dom": "^18.0.10",
    "react-feather": "^2.0.10",
    "rebass": "^4.0.7",
    "source-map-explorer": "^2.0.1",
    "styled-theming": "^2.2.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "ua-parser-js": "^1.0.32",
    "wcag-contrast": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "styled-components": ">=5"
  },
  "dependencies": {
    "styled-components": "^5.3.6"
  }
}
