{
  "packages": ["packages/*", "apps/*"],
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "version": "independent",
  "ignoreChanges": [
   "**/CHANGELOG.md",
   "**/node_modules/**",
   "**/package.json",
   "**/*.md",
   "**/perf/**",
   "**/.nvmrc",
   "**/*.fixture.tsx",
   "**/*.yml"
 ],
  "command": {
     "version": {
        "ignoreChanges": ["*.md", ".nvmrc"],
        "npmClient": "npm",
        "message": "chore(release): publish"
     },
     "publish": {
        "npmClient": "npm"
     }
  }
}